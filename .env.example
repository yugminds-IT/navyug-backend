# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/face_recognition
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Security (change SECRET_KEY in production)
SECRET_KEY=change-this-secret-key-in-production
ENCRYPTION_KEY=

# JWT & sessions
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
SESSION_EXPIRE_HOURS=168
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# CORS (comma-separated frontend origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,http://localhost:5174,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:8000
TRUSTED_HOSTS=localhost,127.0.0.1

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email / OTP (required for send-otp; e.g. Gmail app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_USE_SSL=true
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Campus Safety App
OTP_EXPIRY_MINUTES=10

# S3 (optional; set USE_S3=true to enable)
USE_S3=false
S3_BUCKET_NAME=college
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT_URL=

# Campus Security Bucket: single bucket with structured keys (colleges/college_id=X/students/.../profile/passport.jpg, etc.)
USE_CAMPUS_SECURITY_BUCKET=true
CAMPUS_SECURITY_BUCKET_NAME=campus-security-bucket

# When true: do not load/store college_faces, debug_faces, or report media from local disk; S3 only
USE_S3_ONLY=true

# App
APP_NAME=Face Recognition API
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false

# Face recognition (optional overrides)
FACE_DETECTION_CONFIDENCE=0.5
FACE_MATCH_THRESHOLD=0.4
FRAME_EXTRACTION_RATE=1
MAX_VIDEO_SIZE_MB=500
MAX_IMAGES_PER_FACE=5
USE_GPU=false
GPU_ID=0
